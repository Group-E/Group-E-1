<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

	<LinearLayout
	
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    	<EditText
    	android:id="@+id/EditPersonName"
		android:text="Name"
    	android:textSize="20dp"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
        	
        <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1">
        <EditText
		android:text="E-Mail-Address"
    	android:id="@+id/EditPersonEmail"
    	android:textSize="20dp"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
        
        <ImageButton
    	android:id="@+id/WriteEmail"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@null"
    	android:src="@drawable/sym_action_email"/>
       	
        </LinearLayout>
        
		<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1">
        <EditText
		android:text="Phonenumber"
    	android:id="@+id/EditPersonPhone"
    	android:textSize="20dp"
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
        <ImageButton
    	android:id="@+id/PhoneCall"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@null"
    	android:src="@drawable/call_contact"/>
        </LinearLayout>
        
        <Button
        android:id="@+id/EditMember"
        android:text="Save changes..."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
		<Button
        android:id="@+id/DeleteMember"
        android:text="Delete person"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
	</LinearLayout>

</LinearLayout>